<%= form_with(model: booking, local: true, method: :get) do |form| %>
  <% if booking.errors.any? %>
    <div id="error_explanation">
      <% booking.errors.full_messages.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
    </div>
  <% end %>

  <div class='forms'>
    <div class="field">
      <%= form.label :date %>
      <%= form.date_field :date, {:class => 'form-control', :value => @date, :onclick => "hideForm()"} %>
    </div>
    <br>
    <div class="field">
      <%= form.label :start_time %>
      <%= form.time_select :start_time, {start_hour: 9, end_hour: 18, :minute_step => 30, :ampm => false}, {:onclick => "hideForm()", :default => {:hour => @start_time[0...2].to_i, :minute => @start_time[2...4].to_i}} %>
    </div>

    <div class="field">
      <%= form.label :end_time %>&nbsp
      <%= form.time_select :end_time, {start_hour: 9, end_hour: 18, :minute_step => 30, :ampm => false}, {:onclick => "hideForm()", :default => {:hour => @end_time[0...2].to_i, :minute => @end_time[2...4].to_i}} %>
    </div>
    <br>
    <div class="actions field">
      <%= form.submit "Search Rooms", method: :search , :class => 'btn btn-lg btn-primary btn-block btn-signin' %>
    </div>
  </div>
<% end %>
