<p id="notice"><%= notice %></p>

<h1 id="reqTitle">Requests</h1>

<table id="requestsTable">
  <thead>
    <tr>
      <th>Room</th>
      <th>Description</th>
      <th>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Time/Date Requested</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.room.name %></td>
        <td><%= request.description %></td>
        <td><%= request.date.strftime("%A %-d %B %Y") %></td>
        <td><%= "#{request.start.strftime("%H%M")[0...2]}:#{request.start.strftime("%H%M")[2...4]}" %></td>
        <td><%= "#{request.end.strftime("%H%M")[0...2]}:#{request.end.strftime("%H%M")[2...4]}" %></td>
        <td><%= request.created_at.strftime("%H%M, %A %-d %B %Y") %></td>
        <td><%= request.category %></td>
        <td><%= link_to 'Accept', request, method: :add_request_to_list_of_bookings  %></td>

        <td><%= link_to 'Decline', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
