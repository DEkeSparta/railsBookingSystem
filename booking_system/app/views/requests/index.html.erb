<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Description</th>
      <th>Date</th>
      <th>Start</th>
      <th>End</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Category</th>
      <th>Pending</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.room_id %></td>
        <td><%= request.description %></td>
        <td><%= request.date %></td>
        <td><%= request.start %></td>
        <td><%= request.end %></td>
        <td><%= request.created_at %></td>
        <td><%= request.updated_at %></td>
        <td><%= request.category %></td>
        <td><%= request.pending %></td>
        <td><%= link_to 'Accept', requests_accept_path  %></td>

        <td><%= link_to 'Decline', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
